-content_for :title do
	Контакты
-unless answer.nil?
	.answer
		=answer
%form{:action => "/contacts/sending", :method => "POST"}
	%fieldset.contact-form
		.row
			%label Ваш e-mail:
			%input{:type => "text", :name => "from", :size => "43"}
		.row
			%label Тема:
			%input{:type => "text", :name => "subject", :size => "43"}
		.row
			%label Сообщение:
			%textarea{:rows => "10", :cols => "50", :name => "message"}
		.row
			%label Капча:
			%input{:type => "hidden", :name => "captcha_session", :value => session}
			%img{:alt => "captcha", :src => image}
			%input{:type => "text", :name => "captcha_answer", :size => "43"}
		.row
			%input{:type => "submit", :value => "Отправить"}
